<UserControl x:Class="MyHomeLibUI.SelectParamText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyHomeLibUI"
             mc:Ignorable="d" 
             d:DesignWidth="400">
    <DockPanel x:Name="PathFileSelect" LastChildFill="True"  Height="Auto">
        <TextBlock x:Name="selText" Margin="5" DockPanel.Dock="Left"/>
        <TextBox x:Name="libText" Margin="0,5,5,5" TextChanged="LibText_TextChanged"/>
    </DockPanel>
</UserControl>
